{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "ap-south-1",
            "source_ami": "ami-00a8f2c6918024b25",
            "instance_type": "t2.micro",
            "ssh_username": "ubuntu",
            "ami_name": "suhail-packer-example {{timestamp}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/install-software.sh"
            ],
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "pause_before": "10s"
        },
        {
            "type": "ansible-local",
            "playbook_file": "oracle-java8-playbook.yml"
        }
    ]
}